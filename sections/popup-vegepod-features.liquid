<div class="main-features" style="display:none;">
  <div class="features-popup">
    <div class="features-popup-inner">        
      <div class="close">
        <img src="//cdn.shopify.com/s/files/1/2337/4427/t/2/assets/close.png">
      </div>
        <div class="popup-content">
           {% for block in  section.blocks %}
              <div class="tab-detail">
                <div class="tab-content">
                  <h4>{{ block.settings.popup_features_title }}</h4>
                  <p>{{ block.settings.popup_features_desc }}</p>
                </div>
              </div>
           {% endfor %}
        </div>    
    </div>    
  </div>
  <div class="features-popup-overlay"></div>
</div>

<script>
  $(".popmake-vegepod-features").click(function() {
  	$('.main-features').show();
  });
  
  $(".close img").click(function() {
  	$('.main-features').hide();
  });
  
