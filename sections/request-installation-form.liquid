{%- capture contact_form -%}
  {%- form 'contact' -%}
    {%- unless form.posted_successfully? -%}

    {%- endunless -%}

    {%- if form.posted_successfully? -%}
      <div class="alert alert--success">
        <span class="alert__title">{{ 'contact.form.successfully_sent' | t }}</span>
      </div>
      <script>
        $('#request-form-content').html("<h3>Thank you for requesting, weâ€™ll be in contact with you shortly.</h3>");
      </script>
    {%- endif -%}

    {%- if form.errors -%}
      <div class="alert alert--error">
        <span class="alert__title">{{ 'general.forms.errors' | t }}</span>
        {%- include 'form-errors' -%}
      </div>
    {%- endif -%}

    <div class="form__control-row">
      <div class="form__control">
        <label for="contact__name">Full Name:</label>
        <input type="text" class="form__input" id="contact__name" name="contact[name]" aria-label="{{ 'contact.form.name' | t }}" placeholder="{{ 'contact.form.name' | t }}">
      </div>

      <div class="form__control">
        <label for="contact__address">Address:</label>
        <input type="text" class="form__input" id="contact__address" name="contact[address]" aria-label="{{ 'contact.form.address' | t }}" placeholder="{{ 'contact.form.address' | t }}" required="required">
      </div>
    </div>
    <div class="form__control-row">
      <div class="form__control">
        <label for="contact__state">State:</label>
        <input type="text" class="form__input" id="contact__state" name="contact[state]" aria-label="{{ 'contact.form.state' | t }}" placeholder="{{ 'contact.form.state' | t }}" required="required">
      </div>

      <div class="form__control">
        <label for="contact__phone">Phone Number:</label>
        <input type="tel" class="form__input" id="contact__phone" name="contact[phone]" aria-label="{{ 'contact.form.phone' | t }}" placeholder="{{ 'contact.form.phone' | t }}" required="required">
      </div>
    </div>
    <div class="form__control-row select-combo-install">
      <h4>Select the Combo Needing Installing:</h4>
      <p>Please Click One:</p>
      <div class="grid grid--large grid--center">
        <div class="vegepod-type-radio-btn grid__cell 1/3--handheld-and-up">
          <input type="radio" name="vegepodtype" value="Small Vegepod & Stand">
          <div class="vegepod-type-name"><p>Small Vegepod & Stand</p></div>
          <div class="vegepod-type-price">$150</div>
        </div>
        <div class="vegepod-type-radio-btn grid__cell 1/3--handheld-and-up">
          <input type="radio" name="vegepodtype" value="Medium Vegepod & Stand">
          <div class="vegepod-type-name"><p>Medium Vegepod & Stand</p></div>
          <div class="vegepod-type-price">$200</div>
        </div>
        <div class="vegepod-type-radio-btn grid__cell 1/3--handheld-and-up">
          <input type="radio" name="vegepodtype" value="Large Vegepod & Stand ">
          <div class="vegepod-type-name"><p>Large Vegepod & Stand </p></div>
          <div class="vegepod-type-price">$300</div>
        </div>
      </div>
    </div>
    <div class="form__control-row terms-and-agreement">
      <div class="checkbox-holder"><input type="checkbox" name="aggreement1" value="flatrate"> I understand there is an additional flat rate call out fee of $50.</div>
      <div class="checkbox-holder"><input type="checkbox" name="aggreement2" value="additional per km"> I understand that any installation for greater metro (over 30km) is $1 per additional km.</div>
    </div>

    <input type="submit" class="button button--primary" value="Submit Form">
  {%- endform -%}
{%- endcapture -%}

<div class="request-installation-form-wrapper">
<div class="container">
  <div class="grid--large grid--center">
    <div class="grid__cell--center 5/6--handheld-and-up">
    <div class="request-installation-inner-wrapper">
      <h2 class="section-title h2">Request an Installation Service</h2>
      <div id="request-form-content">
        {{ contact_form }}
      </div>
    </div>
    </div>
  </div>
</div>
</div>